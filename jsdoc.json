{
  "tags": {
      "allowUnknownTags": true
  },
  "source": {
      "include": ["./src"],
      "includePattern": "\\.(vue|js|jsx)$"
  },
  "plugins": [
      "better-docs/component",
      "better-docs/category",
      "plugins/markdown"
  ],
  "opts": {
      "encoding": "utf8",
      "destination": "docs/",
      "recurse": true,
      "verbose": true,
      "readme": "./readme.md",
      "template": "node_modules/better-docs",
      "tutorials": "./tutorials"
  },
  "templates": {
      "better-docs": {
            "name": "Example documentation",
            "navigation": [
                {
                    "label": "GitHub",
                    "href": "https://github.com/SoftwareBrothers/example-design-system"
                }
            ]
      },
      "default": {
        "staticFiles": {
          "include": [
              "./docs-src"
          ]
        }
    }
  }
}